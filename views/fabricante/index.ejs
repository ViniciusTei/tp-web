<!DOCTYPE html>
<html lang="pt-br">
<head>
  <%- include('../shared/head'); %>
</head>
<body class="vh-100 vw-100 p-4" style="background: #6610f2">

  <%- include('../shared/navbar', {user: user}); %>

  <main class="container bg-body rounded p-4">

    <div class="d-flex align-items-center justify-content-between">
      <h1>Fabricante</h1>
      
      <%- include('../shared/back_link'); %>
      
    </div>
    <div class="d-flex flex-row-reverse">
      <button type="button" class="btn btn-outline-secondary btn-sm ms-auto" data-bs-toggle="modal" data-bs-target="#novaCidadeModal">Cadastrar novo fabricante</button>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nome</th>
          <th scope="col">Site</th>
        </tr>
      </thead>
      <tbody>
        <% fabricantes.forEach(function(f){ %>
           
          <tr>
           <th scope="row"><%= f.fabricanteId %></th>
           <td><%= f.nomeFabricante  %></td>
           <td>
              <a target="_blank" rel="noopener noreferrer" href="https://<%= f.siteFabricante %>"><%= f.siteFabricante %></a>
            </td> 
          </tr>
          
        <% }); %>
      </tbody>
    </table>

    <div class="modal fade" id="novaCidadeModal" tabindex="-1" aria-labelledby="novaCidadeModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Cadastrar novo fabricante</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
          </div>
          <div class="modal-body">
            <form id="cidadeForm" method="post" action="/api/fabricante">
              <div class="mb-3">
                <label for="nomeFabricante" class="form-label">Nome</label>
                <input type="text" class="form-control" id="nomeFabricante" name="nomeFabricante" aria-describedby="nomeFabricante" placeholder="Entre com o nome do fabricante" required>
              </div>
              <div class="mb-3">
                <label for="siteFabricante" class="form-label">Site</label>
                <input type="text" class="form-control" id="siteFabricante" name="siteFabricante" aria-describedby="siteFabricante" placeholder="Entre com o site do fabricante" required>
              </div>
              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Cadastrar</button>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
          </div>
        </div>
      </div>
    </div>
      
  </main>

<%- include('../shared/footer'); %> 
</body>
</html>