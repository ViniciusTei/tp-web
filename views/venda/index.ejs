<!DOCTYPE html>
<html lang="pt-br">
<head>
  <%- include('../shared/head'); %>
</head>
<body class="vh-100 vw-100 p-4" style="background: #6610f2">

  <%- include('../shared/navbar', {user: user}); %>

  <main class="container bg-body rounded p-4">

    <div class="d-flex align-items-center justify-content-between">
      <h1>Vendas</h1>
      
      <%- include('../shared/back_link'); %>
      
    </div>
    <div class="d-flex flex-row-reverse">
      <button type="button" class="btn btn-outline-secondary btn-sm ms-auto">
        <a style="text-decoration: none; color: var(--secondary);" href="/vendas/cadastro">Cadastrar nova venda</a>
      </button>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Cliente</th>
          <th scope="col">Data da venda</th>
          <th scope="col">Valor</th>
        </tr>
      </thead>
      <tbody>
        <% vendas.forEach(function(v){ %>
           
          <tr>
           <th scope="row"><%= v.idVendas %></th>
           <td><%= v.nomeCliente  %></td>
           <td><%= v.dataVenda %> </td> 
           <td><%= v.valorPago %> </td>
          </tr>
          
        <% }); %>
      </tbody>
    </table>      
  </main>

<%- include('../shared/footer'); %> 
</body>
</html>