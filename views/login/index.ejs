<!DOCTYPE html>
<html lang="pt-br">
<head>
  <%- include('../shared/head'); %>
</head>
<body>

  <section class="vh-100 vw-100" style="background: #6610f2">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card shadow-2-strong" style="border-radius: 1rem;">
            <form class="card-body p-5 text-center" method="post" action="/api/login">
  
              <h3 class="mb-5 ">Entrar</h3>
  
              <div class="form-outline mb-4 text-start">
                <label class="form-label" for="typeEmailX-2">Email</label>
                <input type="email" name="useremail" id="typeEmailX-2" class="form-control form-control-lg" />
              </div>
  
              <div class="form-outline mb-4 text-start">
                <label class="form-label" for="typePasswordX-2">Senha</label>
                <input type="password" name="password" id="typePasswordX-2" class="form-control form-control-lg" />
              </div>
  
              <button class="btn btn-primary btn-lg btn-block" type="submit">Entrar</button>
  
              <hr class="my-4">
  
              <button class="btn btn-sm btn-link btn-block mb-2 text-xs" type="submit">
                <i class="bi bi-person-plus"></i>
                <a class="text-center" href="/register">Fazer um novo cadastro</a>
              </button>
  
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

<%- include('../shared/footer'); %>
</body>
</html>